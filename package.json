{
  "name": "bslint",
  "version": "1.0.0-beta.1",
  "description": "A linter for BrightScript",
  "bin": {
    "bslint": "./bin/bslint.js"
  },
  "scripts": {
    "docs": "./shell-scripts/run-docs.sh",
    "compile": "npm run grammar && npm run event-generator",
    "event-generator": "node ./bin/event-generator.js",
    "grammar": "./gradlew clean generateGrammarSource",
    "test": "ava",
    "test:watch": "ava --watch",
    "version": "./shell-scripts/update-docs-version.sh"
  },
  "pre-commit": [ "compile", "git add parser/antlr/**" ],
  "main": "./lib/api.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willowtreeapps/bslint.git"
  },
  "engines": {
    "node": ">=7.6.0",
    "npm": ">=5.3.0"
  },
  "author": "Matt VanNuys",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/willowtreeapps/bslint/issues"
  },
  "homepage": "https://github.com/willowtreeapps/bslint#readme",
  "dependencies": {
    "antlr4": "4.7.0",
    "chalk": "2.1.0",
    "js-yaml": "3.9.1",
    "minimatch": "3.0.4",
    "optionator": "0.8.2",
    "path-is-inside": "1.0.2",
    "strip-ansi": "4.0.0",
    "strip-json-comments": "2.0.1",
    "text-table": "0.2.0"
  },
  "devDependencies": {
    "ava": "0.22.0",
    "fs-extra": "4.0.1"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "lib/**/*.js"
    ]
  }
}
